#Compiler and flags.
CC = g++
CFLAGS = -Wall -g

#Name of the output file, and object files.
TARGET = a
OBJS = main.o tokenizer.o

#Generates the output file and the object files.
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS)

#Deletes any files generated by the makefile.
clean:
	rm *.o $(TARGET)